
@model List<OfferListModel>

@{
    Layout = "_Layout";
}


<div class="container">
    <h3 style="text-align:center;">Offers</h3>
    <table class="table table-hover table-bordered table-sm my-3 mx-2">
        <thead>
            <tr>
                <th>Offer Date</th>
                <th>Offer Number</th>
                <th>Offer Name</th>
                <th>Customer Name</th>
                <th>Total Price</th>
                <th>Taxed Total Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offer in Model)
            {
            <tr>
                <td>@offer.OfferDate</td>
                <td>@offer.OfferNumber</td>
                <td>@offer.Name</td>
                <td>@offer.CustomerName</td>
                <td>@offer.TotalPrice <i class="fa-solid fa-turkish-lira-sign small"> </i></td>
                <td>@offer.TaxedTotalAmount()<i class="fa-solid fa-turkish-lira-sign small"> </i></td>

                <td>
                    <a href="/offer/detail/@offer.OfferId" class="btn btn-info">
                        Details
                    </a>
                </td>
            </tr>

            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="https://kit.fontawesome.com/121552d072.js"
            crossorigin="anonymous"></script>
}


